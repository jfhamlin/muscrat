(load-file "./testtab.mrat")
(load-file "./functional00.in")

(def print mrat.core.io.print)

(def tbl
  '((#t #t)
    (#t #f)
    (#f #t)
    (#f #f)))

(def (pret val)
  ;; print val then return it
  (print "eval" val)
  val)

;;; AND

(def (testAnd bools)
  (if (empty? bools)
    #t
    (and (pret (first bools))
         (testAnd (rest bools)))))

(print "### AND")
(testTable tbl
           (fn (bools)
             (print bools "=>" (testAnd bools))))

;;; OR

(def (testOr bools)
  (if (empty? bools)
    #f
    (or (pret (first bools))
         (testOr (rest bools)))))

(print)
(print "### OR")
(testTable tbl
           (fn (bools)
             (print bools "=>" (testOr bools))))

